    <body style="background-color: cornflowerblue" >   
	    <br> 
      <br> 
      <h2><u>BOOK STOCKS</u></h2>
      <table class="table table-dark">
              <thead>
                <tr>
                  <th style="color: black "scope="col"><h5>ISBN</h5></th>
                  <th style="color: black "scope="col"><h5>BOOK TITLE</h5></th>
                  <th style="color: black "scope="col"><h5>BOOK AUTHOR</h5></th>
                  <th style="color: black "scope="col"><h5>EDITION</h5></th>
                </tr>
              </thead>
              <!-- Retrive the value form collection and list it -->
               <tbody>
                    <%result.forEach(function(result) { %>
                    <tr>
                      <td><%= result.ISBN %> </td>
                      <td><%= result.title %></td>
                      <td><%= result.author %></td>
                      <td><%= result.edit %></td>
                    </tr>
                    <% }); %>
                </tbody>
      </table>
      <a href="/" class="btn btn-primary">ADD NEW BOOKS</a>
</div>
</div>
</body> 
</html>	 
